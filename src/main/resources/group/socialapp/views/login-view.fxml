<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="870.0" styleClass="anchor-pane-login" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="group.socialapp.LoginController">

    <Label layoutX="401.0" layoutY="26.0" prefHeight="50.0" prefWidth="860.0" styleClass="label-welcome" text="Login" />
    <TextField fx:id="loginEmailField" layoutX="302.0" layoutY="103.0" prefHeight="40.0" prefWidth="300.0" promptText="Email" styleClass="text-field-login" />
    <PasswordField fx:id="loginPasswordField" layoutX="302.0" layoutY="150.0" prefHeight="40.0" prefWidth="300.0" promptText="Password" styleClass="text-field-login" />

    <ButtonBar layoutX="425.0" layoutY="220.0">
        <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
        </padding>
    </ButtonBar>
    <Button layoutX="409.0" layoutY="217.0" onAction="#handleLogin" styleClass="button-get-started" text="Login" />

    <Hyperlink layoutX="402.0" layoutY="520.0" onAction="#openRegisterWindow" styleClass="hyperlink-login" text="You do not have an account? Register." />

</AnchorPane>
